<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_user_profile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/atactic_medium_dark_gray">

        <!-- Section header -->

        <ImageView
            android:id="@+id/iv_user_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_userpic_128"
            android:tint="@color/White"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_user_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:layout_marginTop="3dp"
            android:textAlignment="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"/>

    </LinearLayout> <!-- End of header -->


    <!-- Setting options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/header_user_profile">

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B6B6B6" />

        <!-- Bar: ranking -->
        <LinearLayout
            android:id="@+id/ll_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/atactic_dark_gray"
                    android:src="@drawable/icon_trophy_32" />

                <TextView
                    android:id="@+id/tv_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_ranking"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:textSize="16sp"
                    android:text="Consultar ranking" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B6B6B6" />

        <!-- Bar: settings -->
        <LinearLayout
            android:id="@+id/ll_close_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/atactic_dark_gray"
                    android:src="@drawable/icon_logout_32" />

                <TextView
                    android:id="@+id/tv_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_settings"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Black"
                    android:textSize="16sp"
                    android:text="Cerrar sesiÃ³n" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B6B6B6" />

    </LinearLayout>


    <!-- Bottom navigation view -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/sp_darkgray"
        app:itemIconTint="@color/color_state_selector"
        app:itemTextColor="@color/color_state_selector"
        app:menu="@menu/bottom_navigation_items"
        />

</RelativeLayout>
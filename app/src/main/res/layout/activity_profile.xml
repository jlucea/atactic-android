<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_user_profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height_large"
            android:background="@color/atactic_medium_dark_gray">

            <!-- Section header -->
            <ImageView
                android:id="@+id/iv_user_portrait"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/vertical_margin_small"
                android:src="@drawable/img_userpic_128"
                android:tint="@color/White"/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/amethysta"
                android:text="Jaime Lucea"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:fontFamily="@font/scope_one" />

            <TextView
                android:id="@+id/tv_user_position"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="ATACTIC Founder and CEO"
                android:textAlignment="center"
                android:textColor="@color/White"
                android:textSize="14sp"
                tools:fontFamily="@font/amethysta" />

        </LinearLayout>
        <!-- End of header -->


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/atactic_medium_gray">

            <TextView
                android:id="@+id/tv_user_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textSize="36sp"
                android:textColor="@color/atactic_bright_red"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_score_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Puntuación"
                android:textColor="@color/atactic_light_gray"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Setting options block no.1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_smaller"
            android:background="@color/White"
            android:orientation="vertical">

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/atactic_light_gray"  />

            <!-- Bar: ranking -->
            <LinearLayout
                android:id="@+id/ll_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="@dimen/horizontal_margin_normal"
                android:layout_marginEnd="@dimen/horizontal_margin_normal"
                android:layout_marginTop="@dimen/vertical_margin_smaller"
                android:layout_marginBottom="@dimen/vertical_margin_smaller"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon_ranking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_centerVertical="true"
                        android:tint="@color/atactic_dark_gray"
                        android:src="@drawable/icon_trophy_32" />

                    <TextView
                        android:id="@+id/tv_ranking"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_ranking"
                        android:fontFamily="@font/andada"
                        android:text="@string/check_ranking"
                        android:textColor="@color/atactic_dark_gray"
                        android:textSize="15sp" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Separator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/atactic_light_gray" />

        </LinearLayout>
        <!-- End of block 1 -->

        <!-- Setting options block no.2 -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_smaller"
        android:background="@color/White"
        android:orientation="vertical">

        <!-- Layout for the "Change password" settings menu option -->
        <LinearLayout
            android:id="@+id/settings_menu_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="@dimen/horizontal_margin_normal"
            android:layout_marginEnd="@dimen/horizontal_margin_normal"
            android:layout_marginTop="@dimen/vertical_margin_smaller"
            android:layout_marginBottom="@dimen/vertical_margin_smaller">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_change_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/atactic_dark_gray"
                    android:src="@drawable/icon_settings_36" />

                <TextView
                    android:id="@+id/tv_change_password"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/icon_change_pwd"
                    android:fontFamily="@font/andada"
                    android:text="Cambiar contraseña"
                    android:textColor="@color/atactic_dark_gray"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/atactic_light_gray" />

        <!-- Layout for the "Close session" settings menu option -->
        <LinearLayout
            android:id="@+id/ll_close_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="@dimen/horizontal_margin_normal"
            android:layout_marginEnd="@dimen/horizontal_margin_normal"
            android:layout_marginTop="@dimen/vertical_margin_smaller"
            android:layout_marginBottom="@dimen/vertical_margin_smaller" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/icon_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_centerVertical="true"
                    android:tint="@color/atactic_dark_gray"
                    android:src="@drawable/icon_logout_32" />

                <TextView
                    android:id="@+id/tv_settings"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/icon_settings"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/andada"
                    android:textColor="@color/atactic_dark_gray"
                    android:textSize="15sp"
                    android:text="@string/logout" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/atactic_light_gray"  />

    </LinearLayout>


    </LinearLayout>

    </ScrollView>

    <!-- Bottom navigation view -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/sp_darkgray"
        app:itemIconTint="@color/color_state_selector"
        app:itemTextColor="@color/color_state_selector"
        app:menu="@menu/bottom_navigation_items" />

</RelativeLayout>
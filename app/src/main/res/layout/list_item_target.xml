<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_target"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_office_512" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_target_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Account name here"
                android:textColor="@color/atactic_dark_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_target_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Account address here"
                android:textColor="@color/atactic_medium_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_weight="0.2">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_target_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="000"
            android:textAlignment="textEnd"
            android:textColor="@color/atactic_dark_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_distance_to_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="0.000 m"
            android:textAlignment="textEnd"
            android:textColor="@color/atactic_medium_gray"
            android:textSize="12sp" />

    </LinearLayout>

    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation">

        <!-- RecyclerView will show the list of individual elements representing quests -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_quest_list"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/icon_fab_checkin_48"
            android:backgroundTint="@color/atactic_space_cadet_blue"
            android:tint="@color/White"
            app:elevation="4dp"/>

    </FrameLayout>

    <!-- Bottom navigation view -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/sp_darkgray"
        app:itemIconTint="@color/color_state_selector"
        app:itemTextColor="@color/color_state_selector"
        app:menu="@menu/bottom_navigation_items" />

</RelativeLayout>
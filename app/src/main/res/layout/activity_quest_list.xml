<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginTop="0dp">

        <!-- Status message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Status message here"
            android:visibility="gone"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- RecyclerView will show the list of individual elements representing quests -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_quest_list"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:visibility="gone"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/questlist_loading_indicator"
                style="?android:attr/progressBarStyle"
                android:indeterminate="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:visibility="gone" />  <!-- Change to visible to show in the design screen -->

        </FrameLayout>

        <!--
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/icon_fab_checkin_48"
            android:tint="@color/White"
            app:borderWidth="0dp"
            app:elevation="6dp"/> -->
            <!-- FAB's background color is taken from the accent color constant in styles.xml -->
            <!-- This also works but generates an exception:
                    android:backgroundTint="@color/atactic_space_cadet_blue" -->

    </FrameLayout>

    <!-- Bottom navigation view -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/sp_darkgray"
        app:itemIconTint="@color/color_state_selector"
        app:itemTextColor="@color/color_state_selector"
        app:menu="@menu/bottom_navigation_items" />

</RelativeLayout>
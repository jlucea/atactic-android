<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Quest administrator info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="22dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_user_32"
            android:tint="@color/atactic_dark_gray"/>

        <TextView
            android:id="@+id/tv_questdetail_owner"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:textSize="13sp"
            android:paddingTop="2dp"
            android:text="Quest administrator name"
            android:lineSpacingExtra="6dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:paddingTop="0dp"
        android:text="Administrador"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        />


    <!-- Deadline info: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/atactic_dark_gray"
            android:src="@drawable/icon_sandclock_32" />

        <TextView
            android:id="@+id/tv_questdetail_deadline"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:textSize="13sp"
            android:text="Quest deadline goes here"
            android:paddingTop="2dp"
            android:lineSpacingExtra="6dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="0dp"
        android:text="@string/quest_deadline"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        />

    <!-- Reward info: -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="center_vertical"
            android:tint="@color/atactic_dark_gray"
            android:src="@drawable/icon_coins_32" />

        <TextView
            android:id="@+id/tv_questdetail_reward"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Quest score goes here"
            android:textSize="13sp"
            android:paddingTop="2dp"
            android:lineSpacingExtra="6dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="90sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="1dp"
        android:text="@string/quest_score"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp" />


</LinearLayout>
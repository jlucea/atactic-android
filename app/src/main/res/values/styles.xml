<resources>

    <!-- Custom application theme. -->
    <style name="SmartpathTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bckgr_lightgrey_angular</item>
        <item name="colorPrimary">@color/sp_turquoise</item>
        <item name="colorPrimaryDark">@color/sp_blue</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmartpathTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SmartpathTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SmartpathTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

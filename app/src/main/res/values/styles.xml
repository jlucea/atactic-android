<resources>

    <!-- ATACTIC theme -->
    <style name="AtacticTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bckgr_lightgrey_angular</item>
        <item name="colorPrimary">@color/atactic_bright_red</item>
        <item name="colorPrimaryDark">@color/atactic_dark_red</item>
        <item name="colorAccent">@color/atactic_bright_red</item>
    </style>

    <!-- In case we want to remove the action bar -->
    <style name="AtacticTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SmartpathTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SmartpathTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

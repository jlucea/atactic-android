<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_target"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/icon_fab_checkin_48"
        android:layout_gravity="center_vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_visited_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client name here"
            android:textColor="@color/atactic_dark_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_date_of_visit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="12/12/2018 9:57"
            android:textColor="@color/atactic_medium_dark_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_visit_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Estos son los comentarios de la visita. Estos son los comentarios de la visita."
            android:textColor="@color/atactic_medium_gray"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>

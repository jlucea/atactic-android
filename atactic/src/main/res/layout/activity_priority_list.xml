<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.atactic.android.activity.AccountListActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginTop="0dp">

        <!--
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AtacticTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AtacticTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>
        -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_navigation"
            android:layout_marginTop="5dp">


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/account_list_refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- RecyclerView will show the list of individual elements representing targets -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_target_list"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:visibility="visible"/>

            </android.support.v4.widget.SwipeRefreshLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/account_list_loading_indicator"
                style="?android:attr/progressBarStyle"
                android:indeterminate="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />  <!-- Change to visible to show in the design screen -->

        </FrameLayout>

    </FrameLayout>

    <!-- Bottom navigation view -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/sp_darkgray"
        app:itemIconTint="@color/color_state_selector"
        app:itemTextColor="@color/color_state_selector"
        app:menu="@menu/bottom_navigation_items" />

</RelativeLayout>
